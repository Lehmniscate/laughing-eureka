<h1><%= @band.name %></h1>

<%= link_to "Edit Band", edit_band_url(@band.id), method: :get %>
<%= link_to "Delete Band", band_url(@band.id), method: :delete %>

<br>

<table>
  <tr>
    <th>Album Title</th>
    <th>Tracks</th>
  </tr>
  <% @band.albums.includes(:tracks).each do |album| %>
    <tr>
      <td><a href="<%= album_url(album.id) %>"><%= album.name %></a></td>
      <td><%= album.tracks.count %></td>
    </tr>
  <% end %>
  <tr>
    <td><%= link_to "Create", new_band_album_url(@band.id), method: :get %></td>
  </tr>
</table>
