<!DOCTYPE html>
<html>
  <head>
    <title>MusicApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>

    <header>
      <a href="<%= bands_url %>">Home</a>
    </header>

    <%= yield %>

    <footer>
      <% if logged_in? %>
      <%= current_user.username %>
      <%= link_to "Log Out", session_url, method: :delete %>
      <% end %>
    </footer>
  </body>
</html>
