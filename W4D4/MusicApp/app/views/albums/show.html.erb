<h2><%= @album.name %></h2>

<%= link_to "Edit Album", edit_album_url(@album.id), method: :get %>
<%= link_to "Delete Album", album_url(@album.id), method: :delete %>
<br>
<table>
  <tr>
    <th>Track Title</th>
    <th>Bonus</th>
  </tr>
  <% @album.tracks.each do |track| %>
    <tr>
      <td><a href="<%= track_url(track.id) %>"><%= track.name %></a></td>
      <td><%= track.bonus ? "bonus track!" : "" %></td>
    </tr>
  <% end %>
  <tr>
    <td><%= link_to "add track", new_album_track_url(@album.id), method: :get %></td>
  </tr>
</table>

Written by <%= link_to "#{@album.band.name}", band_url(@album.band.id), method: :get%>
